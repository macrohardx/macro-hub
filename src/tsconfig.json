{
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "baseUrl": "./",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es5",
        "module": "CommonJS",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
            "reflect-metadata"
        ],
        "lib": [
            "es6",
            "dom"
        ]
    },
    "include": [
        "**/*.ts",
        "main.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}